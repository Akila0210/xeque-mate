generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma2"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id
  name          String
  email         String
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  sessions      Session[]
  accounts      Account[]
  wins          Int       @default(0)
  points        Int       @default(0)

  // Relação com torneios
  torneioCriados Torneio[] @relation("TorneiosCriados")
  participacoes  Participante[]
  userAchievements UserAchievement[]
  
  // Relação com convites
  convitesCriados Convite[] @relation("ConviteCriadoPor")
  convitesUsados  Convite[] @relation("ConviteUsadoPor")
  
  // Relação com puzzles e pontos
  puzzleCompletions PuzzleCompletion[]
  pointsHistory     PointsHistory[]

  @@unique([email])
  @@map("user")
}

model Achievement {
  id               String            @id @default(uuid())
  title            String
  icon             String
  description      String
  userAchievements UserAchievement[]
}

model UserAchievement {
  id            String   @id @default(uuid())
  userId        String
  achievementId String
  achievedAt    DateTime @default(now())

  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  achievement Achievement @relation(fields: [achievementId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([achievementId])
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}

model Torneio {
  id        String   @id @default(uuid())
  nome      String
  data      DateTime
  modo      String
  descricao String?
  finalizado Boolean @default(false)
  criadorId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relação com User
  criador       User          @relation("TorneiosCriados", fields: [criadorId], references: [id], onDelete: Cascade)
  participantes Participante[]
  convites      Convite[]
  partidas      Partida[]

  @@index([criadorId])
  @@map("torneio")
}

model Participante {
  id        String   @id @default(uuid())
  torneioId String
  userId    String
  pontos    Float    @default(0)
  partidas  Int      @default(0)
  vitorias  Int      @default(0)
  derrotas  Int      @default(0)
  empates   Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  torneio Torneio @relation(fields: [torneioId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  partidasBrancas Partida[] @relation("PartidaWhite")
  partidasPretas  Partida[] @relation("PartidaBlack")

  @@unique([torneioId, userId])
  @@index([torneioId])
  @@index([userId])
  @@map("participante")
}

enum ResultadoPartida {
  WHITE_WIN
  BLACK_WIN
  DRAW
}

model Partida {
  id        String            @id @default(uuid())
  torneioId String
  rodada    Int
  whiteId   String
  blackId   String?
  resultado ResultadoPartida?
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt

  torneio Torneio @relation(fields: [torneioId], references: [id], onDelete: Cascade)
  white   Participante @relation("PartidaWhite", fields: [whiteId], references: [id], onDelete: Cascade)
  black   Participante? @relation("PartidaBlack", fields: [blackId], references: [id], onDelete: Cascade)

  @@index([torneioId])
  @@index([rodada])
  @@unique([torneioId, rodada, whiteId, blackId])
  @@map("partida")
}

model Convite {
  id          String   @id @default(uuid())
  torneioId   String
  token       String   @unique
  aceito      Boolean  @default(false)
  aceiteEm    DateTime?
  criadoPorId String
  usadoPorId  String?
  createdAt   DateTime @default(now())
  expiresAt   DateTime

  torneio   Torneio @relation(fields: [torneioId], references: [id], onDelete: Cascade)
  criadoPor User    @relation("ConviteCriadoPor", fields: [criadoPorId], references: [id])
  usadoPor  User?   @relation("ConviteUsadoPor", fields: [usadoPorId], references: [id])

  @@index([torneioId])
  @@index([token])
  @@index([criadoPorId])
  @@map("convite")
}

model Puzzle {
  id              String   @id @default(cuid())
  externalId      String   @unique
  fen             String
  moves           String
  rating          Int
  ratingDeviation Int
  popularity      Int
  nbPlays         Int
  themes          String
  gameUrl         String?
  openingTags     String?
  createdAt       DateTime @default(now())
  
  completions     PuzzleCompletion[]
}

model PuzzleCompletion {
  id            String   @id @default(uuid())
  userId        String
  puzzleId      String
  completedAt   DateTime @default(now())
  type          String   // "daily" ou "weekly"
  pointsAwarded Int      @default(0)
  
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  puzzle        Puzzle   @relation(fields: [puzzleId], references: [id], onDelete: Cascade)
  
  @@unique([userId, puzzleId, type])
  @@index([userId])
  @@index([completedAt])
  @@map("puzzle_completion")
}

model PointsHistory {
  id          String   @id @default(uuid())
  userId      String
  points      Int
  reason      String   // "tournament_1st", "tournament_2nd", "tournament_3rd", "tournament_other", "daily_puzzle", "weekly_puzzle"
  referenceId String?  // ID do torneio ou puzzle
  createdAt   DateTime @default(now())
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([createdAt])
  @@map("points_history")
}